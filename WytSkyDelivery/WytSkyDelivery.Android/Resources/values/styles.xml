<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <!--SpashScreen theme-->
  <style name="MyTheme.Base" parent="Theme.AppCompat.Light">
  </style>

  <style name="MyTheme" parent="MyTheme.Base">
  </style>

  <style name="MyTheme.Splash" parent ="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@layout/splash_screen</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">false</item>
    <item name="colorPrimary">#0f4c82</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">#0f4c82</item>
    <!-- colorAccent is used as the default value for colorControlActivated #1976D2
         which is used to tint widgets -->
    <item name="colorAccent">#0f4c82</item>
    <!-- Disable activity slide-in animation -->
    <item name="android:windowAnimationStyle">@null</item>
  </style>
  <!--End SpashScreen theme-->

  <style name="MainTheme" parent="MainTheme.Base">
  </style>

  <!-- Base theme applied no matter what API -->
  <style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette -->
    <!-- colorPrimary is used for the default action bar background  old #070c0c-->
    <item name="colorPrimary">#0f4c82</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">#0f4c82</item>
    <!-- colorAccent is used as the default value for colorControlActivated #1976D2
         which is used to tint widgets -->
    <item name="colorAccent">#0f4c82</item>
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
    <item name="windowActionModeOverlay">true</item>
    <item name="android:windowLightStatusBar">false</item>
    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
  </style>

  <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">#0f4c82</item>
  </style>
  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">#0f4c82</item>
  </style>
</resources>
